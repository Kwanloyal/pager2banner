<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_bottom_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/selector_color_main</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <!--底部弹出的动画-->
    <style name="dl_anim_slide_share_from_bottom">
        <item name="android:windowEnterAnimation">@anim/dl_slide_share_from_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dl_slide_share_from_bottom_out</item>
    </style>

</resources>
